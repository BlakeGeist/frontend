{{>templates/open page='home'}}

{{>templates/header}}

<main class="index-page">

  <div class="container">

    <div
      data-target="account-info"
      >
    </div>

  <form
    data-collection-form="proposal"
    >

    <input
      name="name"
      placeholder="Name"
      type="input"
      />

    <input
      name="url"
      placeholder="url"
      type="input"
      />

      |

      <input
        type="submit"
        value="submit"
        />

    </form>

  {{#each fireBaseData}}

    <p>name: <a href="/{{../settings.region}}/{{../settings.language}}/proposal/{{slug}}">{{name}}</a> | <a href="" data-collection-delete-taraget="{{slug}}">delete</a></p>

  {{/each}}

  <hr />

  </div>

</main>

{{>templates/footer}}

{{>templates/close}}
