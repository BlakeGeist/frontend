{{>templates/open page='home'}}

{{>templates/header}}

<main class="index-page">

  <div class="container">

    <h1>{{siteSettings.name}}</h1>

    <div
      data-target="account-info"
      >
    </div>

  <form
    data-collection-form="product"
    >

    <input
      name="name"
      placeholder="Name"
      type="input"
      />

    <input
      name="url"
      placeholder="url"
      type="input"
      />

    |

    <input
      type="submit"
      value="submit"
      />

  </form>

  <hr />

  <form
    data-string="create"
    >

    <input
      name="slug"
      placeholder="slug"
      type="input"
      />

    <input
      name="text"
      placeholder="text"
      type="input"
      />

    |

    <input
      type="submit"
      value="submit"
      />

  </form>

  <form
    data-product="import-from-csv"
    enctype="multipart/form-data"
    >

    <input
      name="file"
      type="file"
      />

    |

    <input
      type="submit"
      value="submit"
      />

  </form>

  <p>{{translate 'BIG-TEXT-STRING'}}</p>

  <p>{{translate 'FACEBOOK'}}</p>

  <hr />

  {{#each products}}

    <p>{{translate 'NAME'}}: <a href="/{{../settings.region}}/{{../settings.language}}/product/{{slug}}">{{name}}</a> | <a href="" data-collection-delete-taraget="{{slug}}">delete</a></p>

  {{/each}}

  <hr />

  </div>

</main>

{{>templates/footer}}

{{>templates/close}}
