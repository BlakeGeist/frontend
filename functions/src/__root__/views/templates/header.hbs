<header id="main-header">

  <div class="container">

    <div class="logo">

      <a
        href="/{{settings.region}}/{{settings.language}}"
        >
        {{translate 'HOME'}}
      </a>

    </div>

    <div>

    <div class="menu-items">

      {{#if fireUser.email}}

        <a
          href="/{{settings.region}}/{{settings.language}}/admin/"
          >
          {{translate 'ADMIN'}}
        </a>

        <span>|</span>

        <a
          data-auth="sign-out"
          href=""          
          >
          {{translate 'SIGN-OUT'}}
        </a>

      {{else}}

        <a
          href="/{{settings.region}}/{{settings.language}}/login/"
          >
          {{translate 'LOGIN'}}
        </a>

        <span>|</span>

        <a
          href="/{{settings.region}}/{{settings.language}}/register/"
          >
          {{translate 'SIGN-UP'}}
        </a>

      {{/if}}

    </div>

  </div>

</header>
